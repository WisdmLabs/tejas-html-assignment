{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "title": "Wordpress Assignment",
  "version": 2,
  "description": "Assignment for wordpress",
  "settings": {
    "layout": {
      "allowCustomContentAndWideSize": true
    },
    "spacing": {
      "padding": true,
